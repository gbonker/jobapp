<div class="row">
  <div class="large-4 column">

<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

    <% if controller.action_name == "new" %>
      <h1><legend>Sign Up</legend></h1>
    <% else %>
      <h1><legend>Edit Account</legend></h1>
    <% end %>
      <%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
      <fieldset>

        <%= f.input :name %>
        <%= f.input :email %>

        <%= f.input :password %>
        <%= f.input :password_confirmation %>

        <div class="form-actions">
        <% if controller.action_name == "new" %>
          <%= f.submit 'Sign Up', :class => 'button radius' %>
          <%= link_to 'Cancel', posts_path, :class => 'button alert radius' %>
        <% else %>
          <%= f.submit 'Update Account', :class => 'button radius' %>
          <%= link_to 'Cancel', user_path(current_user.id), :class => 'button alert radius' %>
        <% end %>
        </div>
      </fieldset>   
<% end %>
<% end %>
    </div>
  </div> 

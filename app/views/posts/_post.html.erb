<div class="post">
    <div class="row">
      <div class="col-sm-12">
        <h2><%= link_to( post.title, post ) %></h2>
        <h6>Posted on <%= post.created_at.strftime("%A, %B %-d, %Y") %> by <%= post.user.name %></h6>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-7">
        <p><%= simple_format(post.description) %></p>
      </div>
    </div>

</div>

